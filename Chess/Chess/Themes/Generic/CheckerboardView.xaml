<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:lin="http://lin/2012/xaml/presentation"
                    xmlns:local="clr-namespace:Lin.Chess"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type local:CheckerboardView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Canvas x:Name="PATH_Board" Background="#e9c592" Width="300" Height="330">
                        <Line  X1="30" X2="30" Y1="30" Y2="270" Stroke="Black" SnapsToDevicePixels="True"/>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>